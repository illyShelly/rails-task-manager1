<!-- awesome icon pencil, bootsrap button, redirect to edit form -->
<!-- bootsrap separated class by comma, pushes button on the right -->
<!-- space between icon and text = space behing </i> -->
<%= link_to edit_task_path(@task), class: 'pull-right btn btn-default' do %>
<i class="fa fa-pencil" aria-hidden="true"></i> Edit this task
<% end %>

<h1> <%= @task.title %> </h1>
<!-- bootstrap class well make rouded grey box -->
<p class="well"> <%= @task.details %> </p>


  <div>
    <% if @task.completed %>
      <i class="fa fa-check-square-o"></i> This task is completed
    <% else %>
      <i class="fa fa-square-o"></i> This task is not completed yet
    <% end %>
  </div>
<hr>

<%= link_to tasks_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>

